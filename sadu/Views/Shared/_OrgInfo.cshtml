@model sadu.Models.Organization

<div class="content table-responsive table-full-width">
    <table class="table table-hover">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>E-mail Address</th>
        </thead>
        <tbody>
            @foreach (var user in Model.Members)
            {
                @* if it's the current user; don't add in user's table*@
            if (user.email == (string)Session["email"])
            {
                continue;
            }
            else
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.firstName @user.lastName</td>
                    <td>@user.email</td>
                </tr>
                }
            }
        </tbody>
    </table>

</div>

