@model List<sadu.Models.Submission>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Organization Submissions Progress</h2>

@if (Model.Count() == 0)
{
    <div class="no-pending-submissions-msg">
        <p>No pending submissions.</p>
    </div>
}

@for (var i = 0; i < Model.Count();)
{
    <div class="row">
        @*2 columns per row*@
        @for (var j = 0; j < 2; j++, i++)
        {
            <div class="col col-sm-6">
                @if (i >= Model.Count())
                    {
                        break;
                    }
                <div class="card">
                    <div class="card-image logo">
                        <img src="@(HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority) + Url.Content("~/assets/") + Model.ElementAt(i).Organization.OrganizationImage.Image)" alt="alternate text" />
                    </div>
                    <h4>@Model.ElementAt(i).title</h4>
                    <p>>@Model.ElementAt(i).date_created</p>
                </div>
            </div>
        }

    </div>

}