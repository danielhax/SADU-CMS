@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Organization Submissions Progress</h2>

<div class="submissions-div">
    <div id="submissionsNav" class="view-nav">
        <!-- This button toggles the modal -->
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createSubmissionModal"><i class="pe-7s-plus"> </i>Create Submission</button>
        <button type="button" class="btn btn-primary" id="toggleArchiveBtn">View Archived</button>
    </div>

    <div id="submissionPartial">
    </div>

</div>

<script>
    //onload scripts

    $(function () {

        //set active nav button
        $(".layout-nav li").removeClass("active");
        $("#dashboard-nav").addClass("active");

        updateSubmissionsPartialView();

        //populate select of add submission form of organization names
        $.each(JSON.parse('@Html.Raw(Json.Encode(@Model))'), function (i, val) {
            $("#submissionOrganization").append("<option>" + val + "</option>");
        });
    });


</script>

